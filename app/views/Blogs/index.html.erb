<div class="form-wrapper">
<div class="header">
  <h1>All my blogs</h1>
  <%= link_to 'Add a new blog', new_blog_path %>
</div>
<div class="blog-list">
  <table>
    <tr>
      <th><h2>Titles</h2></th>
      <th colspan=3"></th>
    </tr>
    <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.title %></td>
          <td class="colspan"><%= link_to 'Show', blog_path(blog) %></td>
          <td class="colspan"><%= link_to 'Edit' , edit_blog_path(blog) %></td>
          <td class="colspan"><%= link_to 'Delete', blog_path(blog), method: :delete %></td>
        </tr>
    <% end %>
  </table>
</div>
</div>
