<div class="form-wrapper">
<div class="header">
  <h1>All my blogs</h1>
  <%= link_to 'Add a new blog', new_article_path %>
</div>
<div class="blog-list">
  <table>
    <tr>
      <th><h2>Titles</h2></th>
      <th colspan=3"></th>
    </tr>
    <% @blogs.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td class="colspan"><%= link_to 'Show', article_path(article) %></td>
          <td class="colspan"><%= link_to 'Edit' , edit_article_path(article) %></td>
          <td class="colspan"><%= link_to 'Delete', article_path(article), method: :delete %></td>
        </tr>
    <% end %>
  </table>
</div>
</div>
